	urldate = {2019-06-20},
	journal = {Biochimica et Biophysica Acta (BBA) - Molecular Cell Research},
	author = {Fujimura, Ken and Katahira, Jun and Kano, Fumi and Yoneda, Yoshihiro and Murata, Masayuki},
	month = nov,
	year = {2009},
	keywords = {Microtubule, Oxidative stress, RNA-binding protein, Stress granule},
	pages = {1728--1737}
}

